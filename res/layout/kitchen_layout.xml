<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="91dp" >

        <ImageView
            android:id="@+id/imagebread"
            android:layout_height="50sp"
            android:layout_width="0dip"
			android:layout_weight="20"
            android:src="@drawable/bread" />

        <ImageView
            android:id="@+id/imagelettuce"
            android:layout_height="50sp"
            android:layout_width="0dip"
			android:layout_weight="20"
            android:src="@drawable/lettuce" />

        <ImageView
            android:id="@+id/imagetomatos"
            android:layout_height="50sp"
            android:layout_width="0dip"
			android:layout_weight="20"
            android:src="@drawable/tomatos" />

        <ImageView
            android:id="@+id/imagechicken"
            android:layout_height="50sp"
            android:layout_width="0dip"
			android:layout_weight="20"
            android:src="@drawable/chickensalad" />

        <ImageView
            android:id="@+id/imagemayo"
            android:layout_height="50sp"
            android:layout_width="0dip"
			android:layout_weight="20"
            android:src="@drawable/mayo" />
    </LinearLayout>

</RelativeLayout>